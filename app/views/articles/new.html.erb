<div class="container">
    <div class="d-flex justify-content-center">
      <h1> New Article </h1>
</div>
    <div class="row">
        <%= form_with model: @article do |f| %>
          <div class="d-flex justify-content-center">
            <div class="d-flex justify-content-start"><%= f.label :title %></div>
            <div class="d-flex justify-content-center"><%= f.text_field :title%></div>
          </div>
          <div class="d-flex justify-content-center">
           <div class="d-flex justify-content-start"> <%= f.label :content %></div>
            <div class="d-flex justify-content-center"><%= f.text_field :content%></div>
          </div>
          <div class="d-flex justify-content-center">
              <%= f.submit %>
          </div>
      </div>
            <% end %>
<div class="d-flex justify-content-center">
  <%= link_to "back", articles_path %>
</div>
